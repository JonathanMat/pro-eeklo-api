"/api/deelname": {
  "get": {
    "tags": ["deelname"],
    "summary": "Haalt de deelname-inhoud op",
    "responses": {
      "200": {
        "description": "Succes",
        "content": {
          "application/json": {
            "example": {
              "inhoud": "<p>Wij nemen deel via 3 punten...</p>"
            }
          }
        }
      },
      "404": { "description": "Niet gevonden" }
    }
  },
  "post": {
    "tags": ["deelname"],
    "summary": "Maakt het deelname-blok aan (eenmalig, admin/beheer)",
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "inhoud": { "type": "string" }
            },
            "required": ["inhoud"]
          }
        }
      }
    },
    "responses": {
      "201": { "description": "Aangemaakt" },
      "400": { "description": "Bestaat al of ontbrekende velden" },
      "403": { "description": "Geen toegang" }
    }
  },
  "put": {
    "tags": ["deelname"],
    "summary": "Wijzigt het deelname-blok (admin/beheer)",
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "inhoud": { "type": "string" }
            },
            "required": ["inhoud"]
          }
        }
      }
    },
    "responses": {
      "200": { "description": "Bijgewerkt" },
      "403": { "description": "Geen toegang" },
      "404": { "description": "Niet gevonden" }
    }
  }
}



  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
